extends layout

block scripts
  script
    var socket = io.connect();
    socket.on('add list', function(list){
      var lists = $("li").get();
      lists.splice(4);
      var newlists = $("<li id=" + list.id +"><a href='/view/" + list.id + "'>" + list.name + "</a></li>").get().concat(lists);
      $("ul").empty().append(newlists);
    });
    socket.on('update title', function(list){
      var li = $("li#" + list.id + " a");
      if ( li.length == 1 ){
        li.text(list.name);
      }
    });

block content
  block scripts
  #container
    .item
      a(href="new?id="+ lists.length) Uusi lista
    .item
      a(href="lists") Vanhat listat
      ul
        each list in lists
          li(id=list.id)
            a(href='view/' + list.id)= list.name